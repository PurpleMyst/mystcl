#!/usr/bin/env bash

git clone --no-checkout https://github.com/Akuli/teek || exit 1
cd teek || exit 1
git checkout f0acc49 || exit 1
rm teek/_ctypes_tcl.py
sed -i 's/teek._ctypes_tcl/mystcl/g' teek/_tcl_calls.py || exit 1
sed -i '/^import _tkinter$/d' teek/_platform_info.py || exit 1
sed -Ei $'s/^(TCL_VERSION|TK_VERSION) = .*?$/\\1 = (8, 6)/g' teek/_platform_info.py || exit 1
sed -Ei '/>>>.*?tkinter.*?/d' docs/tkinter.rst
sed -i 's/Helvetica/utopia/g' tests/*.py

for PYBIN in /opt/python/{cp35-cp35m,cp36-cp36m,cp37-cp37m}/bin; do
    test -d "$PYBIN" || exit 1

    export PYTHON_SYS_EXECUTABLE="$PYBIN/python"

    "${PYBIN}/pip" install \
        pytest \
        docutils sphinx \
        pillow reportlab svglib lxml beautifulsoup4 || exit 1

    CI=yes xvfb-run "${PYBIN}/python" -m pytest || exit 1
done
